							<span class="tip_new">New!</span>
							<%end%>
								<span class=""><%=@sangna_config.per_user.coupons_records.where(member_id:@wechat_config.member_id).where("status not in (3,4)").count%></span>
						</div>
						</a>
					</div>
	
		</div>
		<!--底部-->
